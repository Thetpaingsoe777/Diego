<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/ic_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mell Offline"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="20dp"
        android:layout_alignRight="@+id/txtPwd"
        android:layout_alignEnd="@+id/txtPwd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/textView12"
        android:textSize="16dp"
        android:textAlignment="center"
        android:paddingBottom="20dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txtMellerID"
        android:hint="meller id"
        android:text=""
        android:layout_alignParentStart="true"
        android:paddingBottom="20dp"
        android:layout_below="@+id/textView12"
        android:layout_alignRight="@+id/txtPwd"
        android:layout_alignEnd="@+id/txtPwd"
        android:textIsSelectable="false"
        android:textSize="16dp"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPwd"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:hint="password"
        android:text=""
        android:paddingBottom="20dp"
        android:inputType="textPassword"
        android:layout_below="@+id/txtMellerID"
        android:layout_centerHorizontal="true"
        android:textSize="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btnLogin"
        android:layout_below="@+id/txtPwd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/txtPwd"
        android:layout_alignEnd="@+id/txtPwd" />

</RelativeLayout>
